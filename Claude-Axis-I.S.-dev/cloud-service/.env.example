# Axis I.S. Cloud Service Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="Axis I.S. Cloud Service"
APP_VERSION="1.0.0"
DEBUG=false

# MQTT Broker
MQTT_BROKER=mosquitto
MQTT_PORT=1883
# MQTT_USERNAME=
# MQTT_PASSWORD=

# AI Provider Selection
AI_PROVIDER=claude  # Options: "claude", "gemini"

# Claude API Settings (Required if AI_PROVIDER=claude)
ANTHROPIC_API_KEY=sk-ant-api-your-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022  # or "claude-3-5-haiku-20241022" for faster/cheaper
CLAUDE_MAX_TOKENS=500
CLAUDE_TIMEOUT=30

# Gemini API Settings (Required if AI_PROVIDER=gemini)
# GEMINI_API_KEY=AIza-your-key-here
# GEMINI_MODEL=gemini-3-pro  # NEW (Dec 2024) or "gemini-2.0-flash-exp", "gemini-1.5-pro"
# GEMINI_TIMEOUT=30

# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/axis_is
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://redis:6379
REDIS_DB=0

# Scene Memory
SCENE_MEMORY_FRAMES=30
SCENE_MEMORY_TTL=600

# Frame Request
FRAME_REQUEST_COOLDOWN=60
FRAME_REQUEST_ENABLED=true

# Analysis Triggers
MOTION_THRESHOLD=0.7
VEHICLE_CONFIDENCE_THRESHOLD=0.5
SCENE_CHANGE_ENABLED=true

# Performance
MAX_CONCURRENT_ANALYSES=5
